{
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "emulators": {
    "firestore": {
      "port": "8081"
    },
    "ui": {
      "enabled": true,
      "port": 4000
    },
    "hosting": {
      "port": "5002"
    },
    "auth": {
      "port": "9099"
    },
    "functions": {
      "port": "5000"
    },
    "database": {
      "port": "9000"
    },
    "pubsub": {
      "port": "8085"
    }
  },
  "functions": {
    "source": "/",
    "runtime": "nodejs12"
  }
}
